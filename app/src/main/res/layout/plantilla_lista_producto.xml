<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/tarjeta_color"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true">
<ImageView
    android:id="@+id/img_foto"
    android:layout_width="130dp"
    android:layout_height="100dp" />

    <TextView
        android:id="@+id/txv_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad:"
        android:textColor="@color/color_img"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="160dp"
        android:textSize="@dimen/tamaño_letra_nombres"/>
    <TextView
        android:id="@+id/txv_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precios:"
        android:textColor="@color/color_img"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="270dp"
        android:textSize="@dimen/tamaño_letra_nombres"/>

    <TextView
        android:id="@+id/txv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="Nombre:"
        android:textColor="@color/color_img"
        android:textSize="@dimen/tamaño_letra_nombre"
        android:textStyle="bold"/>
</android.support.v7.widget.CardView>
</RelativeLayout>